{
  "name": "template-tailwindcss",
  "version": "0.1.0",
  "scripts": {
    "start": "tailwindcss -i ./src/input.css -o ./public/style.css --watch --minify",
    "build": "tailwindcss -i ./src/input.css -o ./public/style.css --minify && html-minifier --input-dir public --output-dir dist -c html-minifier.config.js"
  },
  "devDependencies": {
    "html-minifier": "^4.0.0",
    "tailwindcss": "^3.1.8"
  },
  "dependencies": {
    "autoprefixer": "^10.4.12",
    "postcss": "^8.4.18"
  }
}
